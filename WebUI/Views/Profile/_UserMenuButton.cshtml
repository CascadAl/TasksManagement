@using System.Web.Configuration;
@model WebUI.Models.ProfileDetailsViewModel
@{ 
    var userName = Model.FullName ?? Model.Username;
}
<li class="dropdown">
    <a href="#" data-toggle="dropdown" class="dropdown-toggle">
        @userName
        <img src="@Model.AvatarPath" class="img-circle avatarSmall" />
        <b class="caret"></b>
    </a>
    <ul class="dropdown-menu">
        <li>@Html.ActionLink("Profile", "Index", "Profile")</li>
        <li>@Html.ActionLink("Settings", "Edit", "Profile")</li>
        <li class="divider"></li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
</li>