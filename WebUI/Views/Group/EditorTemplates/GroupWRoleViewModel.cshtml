@model Services.Models.GroupWRoleViewModel

<li class="group-row">
    
    <div class="controls">
        <a class="btn btn-default" href="@Url.Action("Members", "Group", new { id = @Model.Id })">
            <span class="glyphicon glyphicon-user" aria-hidden="true"></span> Members
        </a>
        @if (Model.IsOwner())
        {
        <a class="btn btn-default edit-group" href="@Url.Action("Edit", "Group", new { id = @Model.Id })" >
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        </a>
        <a class="btn btn-default remove-group"
           data-toggle="confirmation"
           data-btn-ok-class="btn-danger" data-btn-ok-label="Delete"
           data-btn-cancel-class="btn-success" data-btn-cancel-label="Cancel"
           data-title="Confirm group deletion" data-content="WARNING! All content will be lost"
           data-placement="bottom"
           href="@Url.Action("Remove", "Group", new { id = @Model.Id })">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
        </a>
        }
    </div>
    <div class="title">
        <a href="@Url.Action("Index", "Issues", new { groupId = Model.Id})">@Model.Title</a>

        <span><strong> as @Model.Role</strong></span>        
    </div>
    <div class="description">
        <p>@Model.Description</p>
    </div>

</li>