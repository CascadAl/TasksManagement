@model Services.Models.GroupWRoleViewModel

<li class="group-row">
    
    <div class="controls">
        <a class="btn btn-default" href="@Url.Action("Members", "Group", new { id = @Model.Id })">
            <span class="glyphicon glyphicon-user" aria-hidden="true"></span> Members
        </a>
        @if (Model.IsOwner())
        {
        <a class="btn btn-default edit-group" href="@Url.Action("Edit", "Group", new { id = @Model.Id })" >
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        </a>
        }
        <form action="@Url.Action("Leave", "Group", new { id = @Model.Id })" method="post">
            <button class="btn btn-default js-leave-group"
               data-toggle="confirmation"
               data-btn-ok-class="btn-danger" data-btn-ok-label="Leave"
               data-btn-cancel-class="btn-success" data-btn-cancel-label="Cancel"
               data-title="Confirm group leaving"
               data-placement="bottom">
                <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span>
            </button>
        </form>
    </div>

    <div class="group-header-li">
        <div class="title">
            <a href="@Url.Action("Index", "Issues", new { groupId = Model.Id})">@Model.Title</a>

            <span><strong> as @Model.Role</strong></span>
        </div>
        <div class="description">
            <p>@Model.Description</p>
        </div>
    </div>
</li>