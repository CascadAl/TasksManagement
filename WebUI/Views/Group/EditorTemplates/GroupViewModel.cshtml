@model Services.Models.GroupViewModel

<li class="group-row">
    
    <div class="controls">
        <a class="btn btn-default edit-group" href="@Url.Action("Edit", "Group", new {id = @Model.Id})" >
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        </a>
        <a class="btn btn-default remove-group" href="@Url.Action("Remove", "Group", new {id = @Model.Id})">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
        </a>
    </div>
    <div class="title">
        <a href="@Url.Action("Get", "Group", new {id = @Model.Id})">@Model.Title</a>
    </div>
    <div class="description">
        <p>@Model.Description</p>
    </div>

</li>