@model ICollection<Services.Models.TestViewModel>
@{
    ViewBag.Title = "Test";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Test Messages</h2>

<a href="/Home/ExceptionTest" class="btn btn-primary pull-right">Make an exception</a>

@if (Model.Count == 0)
{
    <p>No messages yet</p>
}
else
{
    <table class="table table-striped">
        <tr>
            <th>Message</th>
            <th>Date</th>
        </tr>


        @foreach (var message in Model)
        {
            <tr>
                <td>@message.Message</td>
                <td>@message.Date.Date</td>
            </tr>
        }
    </table>
}