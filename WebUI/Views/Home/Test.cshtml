@model ICollection<Services.Models.TestViewModel>
@{
    ViewBag.Title = "Test";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Test Messages</h2>

<a href="/Home/ExceptionTest" class="btn btn-primary pull-right">Make an exception</a>
<a id="async-ex" class="btn btn-default pull-right">Make an async exception</a>

@if (Model.Count == 0)
{
    <p>No messages yet</p>
}
else
{
    <table class="table table-striped">
        <tr>
            <th>Message</th>
            <th>Date</th>
        </tr>


        @foreach (var message in Model)
        {
            <tr>
                <td>@message.Message</td>
                <td>@message.Date.Date</td>
            </tr>
        }
    </table>
}

@section scripts
{
    <script type="text/javascript">
        $(document).ready(function() {
            $('#async-ex').on('click', function() {
                $.get('/Home/ExceptionTest')
                    
                    .error(function(data) {
                        alert(data.responseJSON['error']);
                    });
            });
        });
    </script>
}
